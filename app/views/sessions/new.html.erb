<h1>Login</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Login" %>
  </div>
<% end %>

<%= flash[:alert] if flash[:alert] %>
